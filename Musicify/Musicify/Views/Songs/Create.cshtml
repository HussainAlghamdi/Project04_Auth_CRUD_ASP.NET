@model SongModel


@{
    var listOfSingers = (List<SingerModel>)ViewData["listOfSingers"];
}
<center>

    <center class="center-form">
        <form asp-action="create" method="post" class="from-horizontal">


            @* <div class="from-group">
                    <label asp-for="Id">Id</label>
                    <input asp-for="Id" />
                </div>*@

            <div class="card border-danger mt-4" style="max-width: 20rem;" wfd-id="63">
                <div class="card-header" wfd-id="65">Add Song</div>
                <div class="card-body p-3" wfd-id="64">

                    <input id="singerIdInput" asp-for="SingerId" type="hidden" value="" />

                    <div class="from-group from-horizontal">
                        <label class="col-6" style="color:black">Search</label>
                        <input class="col-6" id="searchField" />
                        @*<button id="MyButton"> Find </button>*@

                        <button type="button" class="btn btn-dark ml-3 mt--1" wfd-id="637" id="MyButton">Find</button>
                        @*<input type="submit" class="btn-btn-primary col-6" id="MyButton" value="Find" style="background-color:darkgray" />*@
                    </div>

                    <div class="from-group from-horizontal">
                        <label asp-for="Name" class="col-6" style="color:black">Song Name</label>
                        <input asp-for="Name" class="col-6" />
                    </div>

                    <div class="from-group from-horizontal">
                        <label asp-for="Type" class="col-6" style="color:black">Song Type</label>
                        <input asp-for="Type" class="col-6" />
                        <span asp-validation-for="Type"></span>
                    </div>

                    <div class="from-group from-horizontal" hidden>
                        <label asp-for="URL" class="col-6">URL</label>
                        <input id="URL" va asp-for="URL"  class="col-6" />
                        <span asp-validation-for="URL"></span>
                    </div>


                    <div class="btn-group mt-3" role="group" aria-label="Button group with nested dropdown" wfd-id="412">
                        <button type="button" class="btn btn-dark" wfd-id="609">Choose Singer</button>
                        <div class="btn-group" role="group" wfd-id="413">
                            <button id="btnGroupDrop1" type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" wfd-id="614"></button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" wfd-id="414">
                                @*   <a class="dropdown-item" href="#">Dropdown link</a>
                                    <a class="dropdown-item" href="#">Dropdown link</a>*@

                                @foreach (var l in listOfSingers)
                                {
                                    <a class="dropdown-item" href="#" onclick="document.getElementById('singerIdInput').value=@l.Id">@l.Name</a>
                                }


                            </div>
                        </div>
                    </div>
                    <div class="from-group">

                        <input type="submit" class="btn btn-outline-danger" value="Submit" />
                    </div>

                </div>
            </div>






            @*<ul>
                    @{
                        foreach (var l in listOfSingers)
                        {
                            <li>Name Of Singer : @l.Name Singer Id : @l.Id</li>
                        }
                    }
                </ul>*@

