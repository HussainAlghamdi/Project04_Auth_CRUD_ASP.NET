@{
    var Songs = (List<SongModel>)ViewData["Songs"];
    var count = 0;
}





<div style="backdrop-filter: blur(10px)">
    <table class="table table-hover table-danger mt-3 table-curved " style="opacity:0.7; ">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Song Name</th>
                <th scope="col">Song Type</th>
                <th scope="col">Songs</th>
                <th scope="col">Options</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Song in Songs)
            {
            <tr class="table-dark">

                @{count++;}
                <td scope="row">@count</td>
                <td>@Song.Name</td>
                <td>@Song.Type</td>
                <td>
                    <iframe width="400px" height="150px" scrolling="no" frameborder="no" allow="autoplay" src=@Song.URL> </iframe>
                </td>

                <td><button type="button" class="btn btn-dark"><a style="color:white" href="/Songs/details/@Song.Id"> SHOW </a></button></td>
                <td><button type="button" class="btn btn-dark"><a style="color:white" href="/Songs/edit/@Song.Id"> Edit </a></button></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@Song.Id" method="post">
                        <input type="submit" value="Destroy" class="btn btn-danger" />
                    </form>
                </td>
                <td>
                    <form asp-action="Like" asp-route-id="@Song.Id" method="post">
                        <input type="submit" value="Like" class="btn btn-danger" />
                    </form>
                </td>
                <td>
                    @*<a asp-controller="Songs" asp-action="ChoosePlayList" asp-route-id="@Song.Id">Add to playlist</a>*@
                <form asp-controller="Songs" asp-action="ChoosePlayList" asp-route-id="@Song.Id">
                    <input type="submit" value="Add to playlist" class="btn btn-outline-danger" />

                </form>
                </td>

            </tr>
            }


        </tbody>
    </table>

</div>



