@{
    var PlayLists = (PlayListModel)ViewData["PlayLists"];
    var Songs = (List<SongModel>)ViewData["Songs"];
    var count = 1;
}


<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Id: @PlayLists.Id</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Name: @PlayLists.Name</li>

    </ul>
</div>


<div style="backdrop-filter: blur(10px)">
    <table class="table table-hover table-danger mt-3 table-curved " style="opacity:0.7; ">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Singer Name</th>
                <th scope="col">Song Type</th>
                <th scope="col">Songs</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Song in Songs)
            {
                <tr class="table-dark">

                    @{count++;}
                    <td scope="row">@count</td>
                    <td>@Song.Name</td>
                    <td>@Song.Type</td>
                    <td>
                        <iframe width="400px" height="125px" scrolling="no" frameborder="no" allow="autoplay" src=@Song.URL> </iframe>
                    </td>

                    <td>
                        <form asp-action="DeleteSong" asp-route-id="@Song.Id" method="post">
                            <input type="submit" value="Remove" class="btn btn-danger" />
                        </form>

                    </td>

                </tr>
            }


        </tbody>
    </table>

</div>

<form asp-controller="PlayLists" asp-action="Index">
    <input type="submit" value="Back to Platlist" class="btn btn-danger" />
    
    </form>




