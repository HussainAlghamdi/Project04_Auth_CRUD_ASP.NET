@model ProfileModel
@{ 
 var Profiles = (ProfileModel)ViewData["Profiles"];
}



<center>

    <center class="center-from">
        <form asp-action="Edit" method="post" class="from-horizontal">

            <div class="card border-danger mt-5 " style="max-width: 20rem;" wfd-id="63">
                <div class="card-header " wfd-id="65">Edit Profile</div>
                <div class="card-body p-3" wfd-id="64">

                    <div class="from-group from-horizontal">
                        <label asp-for="Name" class="col-6" style="color:black">Name</label>
                        <input asp-for="Name" value="@Profiles.Name" class="col-6" />
                    </div>

                    <div class="from-group from-horizontal">
                        <label asp-for="Photo" class="col-6" style="color:black">Photo</label>
                        <input asp-for="Photo" value="@Profiles.Photo" class="col-6" />
                    </div>

                    <div class="from-group from-horizontal">
                        <label asp-for="Bio" class="col-6" style="color:black">Info</label>
                        <input asp-for="Bio" value="@Profiles.Bio" class="col-6" />
                    </div>

                    <div class="from-group">

                        <input type="submit" class="btn btn-outline-danger" value="Update" />
                    </div>

                </div>
            </div>

        </form>
    </center>
</center>

